<% include ../../partials/header %>

<div class="container window"></div> 
    <div class="row ui main text container blog-post">
        <h1 class="header">Edit blog post</h1>
            <form class="ui form" action="/blog" method="POST">
                <div class="field">
                    <input type="text" name="blog[title]" value="<%= blogs.title %>"></input>
                </div>
                <div class="field">
                    <input type="text" name="blog[image]" value="<%= blogs.image %>"></input>
                </div>
                <div class="field">
                    <textarea class="form-control" name="blog[body]"> <%= blogs.body %> </textarea>
                </div>
                <button class="huge ui secondary button">
                  Okay
                </button>
            </form>
        
    </div>
</div>    

<% include ../../partials/footer %>